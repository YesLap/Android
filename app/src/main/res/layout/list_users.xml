<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvImageUser"
        android:layout_width="60sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_alignTop="@+id/cvImageUser"
        android:layout_marginStart="5sp"
        android:layout_toEndOf="@+id/cvImageUser"
        android:text="Username"
        android:textColor="@color/colorLightBlue"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/cvImageUser"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconbubbleweekon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:text="Sun"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_weight="1"
                android:src="@drawable/iconmorningoff" />

            <ImageView
                android:id="@+id/ivAfternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="2sp"
                android:layout_weight="1"
                android:src="@drawable/iconafternoonoff" />

            <ImageView
                android:id="@+id/ivNight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9sp"
                android:layout_marginTop="2sp"
                android:layout_weight="1"
                android:src="@drawable/iconnightoff" />

        </LinearLayout>

