<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.sendlook.yeslap.FindUsersActivity">

    <ImageView
        android:id="@+id/btnGoToProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/gotoprofile" />

    <ImageView
        android:id="@+id/btnGoToSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/gotosetting" />

    <ImageView
        android:id="@+id/icFind"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btnGoToSettings"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iconfindblue" />

    <LinearLayout
        android:id="@+id/linearWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icFind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Sun"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Mon"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Tue"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Wed"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Thu"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Fri"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivBgOffSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconbubbleweekoff" />

            <TextView
                android:id="@+id/tvSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Sat"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearWeek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconmorningoff" />

        <ImageView
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:id="@+id/ivAfternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconafternoonoff" />

        <ImageView
            android:id="@+id/ivNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iconnightoff" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearDays"
        android:layout_above="@id/imageView5">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvUsers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/colorLightBlue"
            android:footerDividersEnabled="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@drawable/wavebottom" />

</RelativeLayout>
