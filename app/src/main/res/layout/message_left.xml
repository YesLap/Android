<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="5sp"
        android:src="@drawable/maskphotoprofileprincipal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvImageUser"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_profile" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/on_user" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cvImageUser"
        android:layout_marginStart="5sp"
        android:layout_toEndOf="@+id/imageView4"
        android:textStyle="bold"
        android:background="@drawable/input_outline_left"
        android:minHeight="50sp"
        android:minWidth="50sp"
        android:maxWidth="220sp"
        android:padding="10sp" />

    <ImageView
        android:layout_marginStart="-15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvMessage"
        android:background="@drawable/iconbluebombmessage" />

</RelativeLayout>